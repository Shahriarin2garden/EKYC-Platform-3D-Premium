# ==================================
# EKYC Platform - Environment Variables
# ==================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control

# ==================================
# Application Environment
# ==================================
NODE_ENV=production

# ==================================
# Port Configuration
# ==================================
BACKEND_PORT=5000
FRONTEND_PORT=3000
MONGODB_PORT=27017
RABBITMQ_PORT=5672
RABBITMQ_MGMT_PORT=15672

# ==================================
# MongoDB Configuration
# ==================================
MONGODB_DB=ekyc_db
# Leave empty for no authentication (development only)
MONGODB_USER=
MONGODB_PASSWORD=

# Full MongoDB URI (constructed automatically if using docker-compose)
# MONGODB_URI=mongodb://localhost:27017/ekyc_db

# ==================================
# RabbitMQ Configuration
# ==================================
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=admin123
# RABBITMQ_URL=amqp://admin:admin123@localhost:5672

# ==================================
# JWT Configuration
# ==================================
# IMPORTANT: Change this to a strong random string in production
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRES_IN=7d

# ==================================
# Frontend Configuration
# ==================================
FRONTEND_URL=http://localhost:3000
# API URL for frontend (used during build)
REACT_APP_API_URL=http://localhost:5000/api

# ==================================
# AI Service Configuration
# ==================================
# OpenRouter API key for AI-powered analysis (optional)
OPENROUTER_API_KEY=

# ==================================
# Docker Development Override
# ==================================
# For development with hot-reload, uncomment:
# COMPOSE_FILE=docker-compose.yml:docker-compose.dev.yml
